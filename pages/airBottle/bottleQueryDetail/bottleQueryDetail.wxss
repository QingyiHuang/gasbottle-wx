/* pages/airBottle/bottleQueryDetail/bottleQueryDetail.wxss */
.headerDetail{
	padding: 24rpx;
	box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(145, 168, 195, 0.12);
	background: radial-gradient(413.00% 69.00% at 50% 0%,rgba(147, 196, 255, 0.2) 1.877%,rgba(227, 236, 255, 0) 100%),rgb(255, 255, 255);
	position: relative;
}
.headerDetalTitle{
	color: rgb(51, 51, 51);
	font-size: 40rpx;
	font-weight: 500;
	line-height: 60rpx;
	letter-spacing: 0px;
	text-align: left;
	padding-right: 160rpx;
	word-break: break-all;
	margin-bottom: 36rpx;
}
.container{
  display: flex;          /* 使用 Flexbox 布局 */
  flex-direction: column; /* 子元素垂直排列 */
  height: 100vh;  
}
.detailInfo{
	background-color: rgb(245, 245, 245);
	flex: 1;
	overflow: auto;
	padding: 24rpx 0;
}
.oneInfo{
	position: relative;
	margin-bottom: 16rpx;
	min-height: 28rpx;
}
.oneInfo-left{
	color: rgba(0, 0, 0, 0.4);
	font-size: 28rpx;
	font-weight: 400;
	letter-spacing: 0px;
	text-align: left;
	position: absolute;
	left: 0;
	top: 0;
	width: 160rpx;
}
.oneInfo-right{
	color: rgb(102, 102, 102);
	font-size: 28rpx;
	font-weight: 400;
	letter-spacing: 0px;
	text-align: left;
	margin-left: 160rpx;
}
.van-cell-group--inset{
  margin: 0 24rpx !important;
}
.van-cell{
  color: rgb(153, 153, 153) !important;
}
.van-cell__value{
  color: rgb(51, 51, 51) !important;
  font-weight: 400;
}
.taglist{
  height: 60rpx;
  position: absolute;
  right: 24rpx;
  top: 32rpx;
}
.taginline{
  display: inline-block;
  height: 48rpx;
  padding: 0 12rpx;
  line-height: 48rpx;
  border-radius: 8rpx;
}
.taginline + .taginline{
  margin-left: 8rpx;
}
.tag1{
  background-color: rgb(29, 184, 76);
  color: #ffffff;
}
.tag2{
  background-color: rgb(230, 32, 42);
  color: #ffffff;
}
.tag22{
  background-color: rgb(247, 143, 25);
  color: #ffffff;
}
.tag3{
  background-color: rgb(77, 77, 77);
  color: #ffffff;
}
.tag4{
  background-color: rgb(27, 184, 247);
  color: #ffffff;
}
.tag5{
  border: 2rpx solid rgb(23, 108, 255);
  color: rgb(23, 108, 255);
}